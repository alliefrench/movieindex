{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "app/dist"
            }
        },
        {
            "src": "api/handler.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/handler.py"
        },
        {
            "src": "/(.*)",
            "dest": "app/dist/$1"
        }
    ]
}