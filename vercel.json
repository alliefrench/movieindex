{
    "version": 2,
    "builds": [
        {
            "src": "app/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "app/dist/$1"
        }
    ],
    "outputDirectory": "app/dist"
}